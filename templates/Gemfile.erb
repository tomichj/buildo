gem 'operate'
gem 'slim-rails'
gem 'autoprefixer-rails'
gem 'flutie'
gem 'title'
gem 'jquery-rails'
gem 'pg', '~> 0.18'
gem 'rack-canonical-host'
gem 'recipient_interceptor'
gem 'sprockets', '>= 3.0.0'

group :development do
  gem 'listen'
  gem 'rack-mini-profiler', require: false
  gem 'spring'
  gem 'web-console'
end

group :development, :test do
  gem 'awesome_print'
  gem 'bundler-audit', '>= 0.5.0', require: false
  gem 'dotenv-rails'
  gem 'pry-byebug'
  gem 'pry-rails'
end

group :test do
  gem 'formulaic'
  gem 'simplecov', require: false
  gem 'timecop'
  gem 'webmock'
end

gem 'buildo', group: [:development, :test]
