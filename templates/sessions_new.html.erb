<%= form_for :session, url: session_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="field">
    <%= form.check_box :remember_me %>
    <%= form.label :remember_me %>
  </div>

  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>
